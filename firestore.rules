rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user is the owner of the resource
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Subjects: Public read, Admin write (or no write for now via client)
    match /subjects/{subjectId} {
      allow read: if true;
      allow write: if isAuthenticated(); // Allow any auth user to seed for now, or restrict later
    }

    // Playlists: Public read, Auth create, Owner update/delete
    match /playlists/{playlistId} {
      allow read: if true;
      
      allow create: if isAuthenticated() 
                   && request.resource.data.authorId == request.auth.uid;
                   
      allow update: if isAuthenticated() 
                   && isOwner(resource.data.authorId)
                   && request.resource.data.authorId == request.auth.uid; // Prevent changing author
                   
      allow delete: if isAuthenticated() 
                   && isOwner(resource.data.authorId);
    }
  }
}
